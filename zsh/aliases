# aliases for exa
alias ls='exa --group-directories-first'
alias l='ls -l'
alias ll='ls -la'
alias la='ls -lagh'
alias ltl='l -TL'
alias lt='l -T'

# aliases on navigation
alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'

# aliases on programs
alias ppr='pepper'
alias vim='nvim'
alias emacs='emacs -nw'
alias rep='source ~/.zshrc'
alias tmux='tmux -2'
alias bp='bomb-party'

alias charshuf="fold -w1 | shuf | tr -d '\n'"

alias cd='z'
alias c='z'

alias v='nvim'

alias gd='git diff'
alias gf='git fetch --all'
alias gg='git log'
alias gh='git push'
alias gl='git pull'
alias gs='git status'
alias gw='git switch'

alias gaa='git add --all'
alias gcm='git commit -m'
alias gds='git diff --stat'
alias ghu='git push --set-upstream'
alias gpd='git pull origin develop'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias gsd='git switch develop'
alias gtl='git log --oneline --graph --decorate'

alias gho+='git push origin +$(git branch --show-current)'

